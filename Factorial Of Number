#include <stdio.h>

int main()
{
    int a;
    
    printf("Enter the Number for Factorial=");
    scanf("%d",&a);
    
    printf("The Factorial of %d = %d",a,factorial(5));
}

int factorial(int a) {
    if(a==0 || a==1) {
        return 1;
    }
    else {
        return factorial(a)*factorial(a-1);
    }
}


#using python to find factorial of a number
def factorial(n):
    if(n <= 1):
        return 1
    else:
        return(n*factorial(n-1))
n = int(input("Enter number:")
print(factorial(n))
